  "version": "0.2.0",
  "configurations": [
    {
      "name": "current ts file",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart",
      "env": { "NODE_ENV": "development" }
    }
  ]
}
